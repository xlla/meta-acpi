External (\_SB.PCI0.I2C6, DeviceObj)

Scope (\_SB.PCI0.I2C6)
{
    Device (OLED) {
        Name (_HID, "PRP0001")
        Name (_DDN, "ssd1306 oled")
        Name (_CRS, ResourceTemplate () {
            I2cSerialBus (
                0x3C,                   // Bus address
                ControllerInitiated,    // Don't care
                400000,                 // Fast mode (400 kHz)
                AddressingMode7Bit,     // 7-bit addressing
                "\\_SB.PCI0.I2C6",      // I2C host controller
                0                       // Must be 0
            )
        })
        /*
         * See drivers/staging/fbtft/fbtft-core.c::fbtft_properties_read()
         * for more information about these bindings.
         */
        Name (_DSD, Package () {
            ToUUID("daffd814-6eba-4d8c-8a91-bc9bbf4aa301"),
            Package () {
                Package () { "compatible", Package () { "solomon,ssd1306fb-i2c" } },
                Package () { "width", 128 },
                Package () { "height", 64 },
                Package () { "buswidth", 8 },
            }
        })
    }
}
